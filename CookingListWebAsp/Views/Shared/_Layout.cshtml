<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wallet App</title>

    <!-- In the head section of _Layout.cshtml -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- Include Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Include Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-[#1a1a2e] text-white">
    <!-- Changed to dark purple -->
    <div class="flex min-h-screen">
        <!-- Sidebar - Changed to deeper purple -->
        <div class="fixed left-0 h-full w-64 bg-[#16213e] p-4 overflow-y-auto">
            <div class="flex items-center space-x-3 mb-8">
                <div class="w-10 h-10 rounded-full bg-purple-700"></div>
                <div>
                    <h2 class="font-semibold">Wallet App</h2>
                    <p class="text-sm text-purple-200">Ashton Cox</p>
                </div>
            </div>

            <div class="space-y-6">
                <div>
                    <p class="text-purple-400 text-sm mb-4">GENERAL</p>
                    <div class="space-y-2">
                        @Html.ActionLink("Dashboard", "Index", "Home", null, new { @class = "flex items-center space-x-3 text-purple-200 hover:text-white w-full p-2 rounded hover:bg-purple-900" })
                        @Html.ActionLink("Categories", "Index", "Category", null, new { @class = "flex items-center space-x-3 text-purple-200 hover:text-white w-full p-2 rounded hover:bg-purple-900" })
                        @Html.ActionLink("Transactions", "Index", "Transaction", null, new { @class = "flex items-center space-x-3 text-purple-200 hover:text-white w-full p-2 rounded hover:bg-purple-900" })
                    </div>
                </div>

                <div>
                    <p class="text-purple-400 text-sm mb-4">EXTRAS</p>
                    <div class="space-y-2">
                        @Html.ActionLink("Reports", "Reports", "Home", null, new { @class = "flex items-center space-x-3 text-purple-200 hover:text-white w-full p-2 rounded hover:bg-purple-900" })
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="ml-64 flex-1 p-8">
            @RenderBody()
        </div>
    </div>

    @await RenderSectionAsync("scripts", required: false)
</body>
</html>